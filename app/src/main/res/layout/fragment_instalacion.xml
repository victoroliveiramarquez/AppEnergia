<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aplicacion2.appenergia.samartsolar.fragments.InstalacionFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:contentDescription="Descripcion estática de la instalación"
        android:text="Aquí tienes los datos de la instalación fotovoltaica en tiempo real."
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvAutoconsumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="20dp"
        android:contentDescription="Palabra Autoconsumo"
        android:text="Autoconsumo:"
        android:textColor="#9B9191"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="95dp"
        android:text="92%"
        android:textSize="15sp"
        android:textStyle="bold"
        android:contentDescription="Porcentaje estático"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="354dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="15dp"
        android:src="@drawable/grafico1" />

</FrameLayout>